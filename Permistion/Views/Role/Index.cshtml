@model List<IdentityRole>

<partial name="_RoleForm" model="new RoleViewModel()" />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Role Name</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Role"
                       asp-action="MangePermision" asp-route-roleid="@item.Id">Mange Permision</a>
                </td>
            </tr>

        }
</table>

@section scripts{
    <partial name="_ValidationScriptsPartial"/>
}
